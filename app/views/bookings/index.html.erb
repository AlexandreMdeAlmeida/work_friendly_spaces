
<div class="container">
  <!-- Area to display the movies -->
  <h2>All my bookings</h2>
  <div class="col-9">
    <div class="accordion" id="accordionExample">
      <% @bookings.each do |booking| %>

        <div class="card-body">
          <h5 class="card-title"><%= booking.renting_space.name %></h5>
          <p><%= booking.check_in %></p>
          <p><%= booking.check_out %></p>
          <p><%= booking.number_of_guests %></p>
          <p><%= booking.number_of_rooms %></p>
        </div>


      <% end %>
    </div>
  </div>
</div>
