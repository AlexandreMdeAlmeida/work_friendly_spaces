
<div class="index-bookings">
  <div class="container">
    <% @bookings.each do |booking| %>
      <div class="card mb-3 m-auto" id="booking-card">
        <div class="row no-gutters">
          <div class="col-md-4">



          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h4 class="card-title"><%= booking.renting_space.name %></h4>
              <p class="card-text">
                <i class="fa-solid fa-location-dot"></i><%= booking.renting_space.address %>
              </p>
              <p class="card-text">
                <strong>Check-In: </strong><%= booking.start_date %>
              </p>
              <p class="card-text">
                <p class="card-text"><strong>Check-Out: </strong><%= booking.end_date %></p>
              </p>
              <%=link_to "Cancel booking", booking_path(booking), class: "btn btn-gradient", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
