
<div class="container">
   <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="row">
    <div class="cards">
      <% @renting_spaces.each do |renting_space| %>
        <div class="card" >
          <!--TODO
          <%= link_to renting_space_path(renting_space.id), class: "card-img" do %>
            <%= image_tag "https://images.unsplash.com/photo-1580587771525-78b9dba3b914?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dmlsbGF8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60" %>
          <% end %> -->

          <img src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dmlsbGF8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60"
              class="card-img-top" alt=<%= renting_space.name %>>
          <div class="card-body">
            <h5 class="card-title"><%= renting_space.name %></h5>
            <p class="card-text"><%= renting_space.address %></p>
          </div>
          <a href=<%= renting_space_path(renting_space.id) %> class="btn btn-primary">Show more details</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
