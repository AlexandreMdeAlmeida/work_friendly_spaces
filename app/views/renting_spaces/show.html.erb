<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1440778303588-435521a205bc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80);">

  <div class="container rentingspace-show">

    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="container pb-3" id="renting-space-show">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dmlsbGF8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60"
                    class="d-block w-100 rounded" alt="...">
              </div>
              <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1540518614846-7eded433c457?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1714&q=80"
                    class="d-block w-100 rounded" alt="...">
              </div>
              <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1622126755582-16754165dce8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80"
                  class="d-block w-100 rounded" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <div class="border-bottom mt-3 mb-3">
            <h2 class="name-rentingspace mt-3"><%= @renting_space.name %> hosted by <%= @renting_space.user.first_name %><%= @renting_space.user.last_name %></h2>
            <h4 class="address-rentingspace"> <i class="fa-solid fa-location-dot"></i> <%= @renting_space.address %> </h4>
          </div>

          <div class="border-bottom mt-3 mb-3 info-rentingspace">
            <p> <i class="fa-solid fa-door-open"></i> Self check-in </p>
            <p> <i class="fa-regular fa-calendar-minus"></i> Free cancellation for 48 hours </p>
          </div>

          <div class="border-bottom mt-3 mb-3 description-rentingspace">
            <p> Welcome to our luxurious and contemporary flat, located at <%= @renting_space.address %>.
                This stunning residence offers a seamless blend of style and comfort.
                With amenities like <%= @renting_space.amenities %>, and it is in a prime location, this is the perfect place to call home.
                Experience the pinnacle of upscale living in this exquisite abode.
            </p>
          </div>

          <div class="border-bottom mt-3 amenities-rentingspace">
            <h3 class="amenities-heading">What this place offers</h3>
            <% if @renting_space.internet? %>
              <p> <i class="fa-solid fa-wifi"></i>  High speed internet </p>
            <% end %>

            <% array = @renting_space.amenities %>
            <ul class="list-group list-group-horizontal amenities-list">
              <% array.drop(1).each do |item| %>
                <li class="list-group-item"><%= item %></li>
              <% end %>
            </ul>
          </div>



        </div>
      </div>

      <% if @renting_space.user === current_user%>
        <div class="col-12 col-lg-4">
            <%= render "edit"%>
        </div>
      <% else %>
        <div class="col-12 col-lg-4">
          <%= render "bookings/new"%>
        </div>
      <% end %>

    </div>

    <div class="container pt-0">
      <h3 class="map-heading">Where you'll be</h3>
      <div class="pt-2" style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>

</div>
